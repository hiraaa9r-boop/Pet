rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && request.auth.token.admin == true;
    }

    function isOwner(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }

    // USERS (profilo base)
    match /users/{userId} {
      allow create: if isSignedIn() && isOwner(userId);
      allow read, update, delete: if isOwner(userId) || isAdmin();
    }

    // PROS (profili professionisti)
    match /pros/{proId} {
      // elenco pro è pubblico in lettura
      allow read: if true;

      // creazione/aggiornamento solo del proprio profilo o admin
      allow create: if isSignedIn();
      allow update, delete: if isOwner(proId) || isAdmin();
    }

    // BOOKINGS (prenotazioni)
    match /bookings/{bookingId} {
      allow read, update, delete: if isSignedIn() &&
        (
          request.auth.uid == resource.data.ownerId ||
          request.auth.uid == resource.data.proId ||
          isAdmin()
        );

      allow create: if isSignedIn() &&
        (
          request.auth.uid == request.resource.data.ownerId ||
          isAdmin()
        );
    }

    // CALENDARS (disponibilità PRO)
    match /calendars/{proId}/slots/{slotId} {
      // tutti possono leggere le disponibilità
      allow read: if true;

      // scrivere solo il PRO proprietario o admin
      allow create, update, delete: if isOwner(proId) || isAdmin();
    }

    // LOCKS (blocchi temporanei slot)
    match /calendars/{proId}/locks/{lockId} {
      // visibile solo al pro e admin
      allow read: if isOwner(proId) || isAdmin();
      allow create, update, delete: if isOwner(proId) || isAdmin();
    }

    // REVIEWS (recensioni)
    match /reviews/{reviewId} {
      allow read: if true;

      allow create: if isSignedIn() &&
        request.auth.uid == request.resource.data.ownerId;

      allow update, delete: if isSignedIn() &&
        (
          request.auth.uid == resource.data.ownerId ||
          isAdmin()
        );
    }

    // COUPONS (gestiti solo da admin)
    match /coupons/{couponId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // CATCH-ALL: tutto il resto è negato
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
